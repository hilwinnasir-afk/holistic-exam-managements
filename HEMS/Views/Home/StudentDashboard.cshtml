@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-graduate"></i> Student Dashboard
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Student != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Student Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Student ID:</strong></td>
                                        <td>@ViewBag.Student.IdNumber</td>
                                    </tr>
                                    <tr>
                                        <td><strong>University Email:</strong></td>
                                        <td>@ViewBag.Student.UniversityEmail</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Batch Year:</strong></td>
                                        <td>@ViewBag.Student.BatchYear</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Registration Date:</strong></td>
                                        <td>@ViewBag.Student.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                </table>
                            </div>
                            
                            <div class="col-md-6">
                                <h5>Authentication Status</h5>
                                <div class="list-group">
                                    <div class="list-group-item">
                                        <i class="fas fa-check-circle text-success"></i>
                                        <strong>Phase 1 Completed</strong>
                                        <small class="text-muted d-block">Identity verification successful</small>
                                    </div>
                                    
                                    @if (ViewBag.Phase2Completed == true)
                                    {
                                        <div class="list-group-item">
                                            <i class="fas fa-check-circle text-success"></i>
                                            <strong>Phase 2 Completed</strong>
                                            <small class="text-muted d-block">Exam access granted</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="list-group-item">
                                            <i class="fas fa-clock text-warning"></i>
                                            <strong>Phase 2 Pending</strong>
                                            <small class="text-muted d-block">Complete on exam day</small>
                                        </div>
                                    }
                                    
                                    @if (ViewBag.MustChangePassword == true)
                                    {
                                        <div class="list-group-item list-group-item-warning">
                                            <i class="fas fa-exclamation-triangle text-warning"></i>
                                            <strong>Password Change Required</strong>
                                            <small class="text-muted d-block">Update your password to continue</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="list-group-item">
                                            <i class="fas fa-shield-alt text-success"></i>
                                            <strong>Password Up to Date</strong>
                                            <small class="text-muted d-block">Security requirements met</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clipboard-list"></i> Available Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (ViewBag.Phase2Completed != true)
                        {
                            <a href="@Url.Action("Phase2Login", "Authentication")" class="list-group-item list-group-item-action">
                                <i class="fas fa-unlock text-primary"></i>
                                <strong>Complete Phase 2 Login</strong>
                                <small class="text-muted d-block">Required for exam access</small>
                            </a>
                        }
                        
                        @if (ViewBag.MustChangePassword == true)
                        {
                            <a href="@Url.Action("ChangePassword", "Authentication")" class="list-group-item list-group-item-action list-group-item-warning">
                                <i class="fas fa-key text-warning"></i>
                                <strong>Change Password</strong>
                                <small class="text-muted d-block">Required before exam access</small>
                            </a>
                        }
                        
                        @if (ViewBag.Phase2Completed == true && ViewBag.MustChangePassword != true)
                        {
                            <a href="@Url.Action("ExamAccess", "Home")" class="list-group-item list-group-item-action list-group-item-success">
                                <i class="fas fa-play-circle text-success"></i>
                                <strong>Access Exams</strong>
                                <small class="text-muted d-block">Start taking available exams</small>
                            </a>
                        }
                        
                        <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action">
                            <i class="fas fa-home text-secondary"></i>
                            <strong>Back to Home</strong>
                            <small class="text-muted d-block">Return to main page</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Next Steps
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Phase2Completed != true)
                    {
                        <div class="alert alert-info">
                            <h6><i class="fas fa-calendar-alt"></i> On Exam Day:</h6>
                            <ol class="mb-0">
                                <li>Wait for your coordinator to announce the session password</li>
                                <li>Complete Phase 2 login using your Student ID and the session password</li>
                                <li>Change your password when prompted</li>
                                <li>Access and complete your examination</li>
                            </ol>
                        </div>
                    }
                    else if (ViewBag.MustChangePassword == true)
                    {
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-key"></i> Password Change Required:</h6>
                            <p class="mb-0">
                                You must change your password before you can access examinations. 
                                Click the "Change Password" button above to proceed.
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <h6><i class="fas fa-check-circle"></i> Ready for Exams:</h6>
                            <p class="mb-0">
                                You have completed all authentication requirements and can now access available examinations. 
                                Click "Access Exams" to view and take your exams.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
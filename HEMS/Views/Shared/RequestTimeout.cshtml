@{
    ViewBag.Title = "Request Timeout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <i class="fas fa-hourglass-half fa-2x mb-2"></i>
                    <h4 class="mb-0">Request Timeout</h4>
                </div>
                
                <div class="card-body p-4">
                    <!-- Error Message -->
                    <div class="alert alert-warning border-0 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-clock me-3 mt-1 text-warning"></i>
                            <div>
                                <h5 class="alert-heading mb-2">Your request took too long to process</h5>
                                <p class="mb-0">The server didn't receive a response within the expected time limit.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Possible Causes -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">This might be due to:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-wifi text-info me-2"></i>
                                Slow or unstable internet connection
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-server text-info me-2"></i>
                                High server load or temporary performance issues
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-database text-info me-2"></i>
                                Database processing delays
                            </li>
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 mb-4">
                        <button type="button" class="btn btn-primary" onclick="window.location.reload()">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </button>
                        
                        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                        
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Return to Dashboard
                        </a>
                    </div>

                    <!-- Tips -->
                    <div class="alert alert-info border-0">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-lightbulb me-3 mt-1 text-info"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Tips to Avoid Timeouts</h6>
                                <ul class="mb-0 ps-3">
                                    <li>Check your internet connection stability</li>
                                    <li>Close unnecessary browser tabs or applications</li>
                                    <li>Try again during off-peak hours if possible</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Exam Warning -->
                    <div class="alert alert-warning border-0">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-exclamation-triangle me-3 mt-1 text-warning"></i>
                            <div>
                                <h6 class="alert-heading mb-2">During Exams</h6>
                                <p class="mb-0">If this happens during an exam, your answers are automatically saved. Contact your exam coordinator if timeouts persist.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Timestamp -->
                    <div class="text-center mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Timeout occurred at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .alert {
        border-radius: 8px;
    }
    
    .btn {
        border-radius: 6px;
        font-weight: 500;
    }
    
    .border-top {
        border-top: 1px solid #dee2e6 !important;
    }
</style>
@{
    ViewBag.Title = "Session Timeout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <i class="fas fa-clock fa-2x mb-2"></i>
                    <h4 class="mb-0">Session Timeout</h4>
                </div>
                
                <div class="card-body p-4">
                    <!-- Error Message -->
                    <div class="alert alert-warning border-0 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-exclamation-triangle me-3 mt-1 text-warning"></i>
                            <div>
                                <h5 class="alert-heading mb-2">Your session has expired</h5>
                                <p class="mb-0">For security reasons, you have been automatically logged out due to inactivity.</p>
                            </div>
                        </div>
                    </div>

                    <!-- What happened -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">What happened:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-shield-alt text-success me-2"></i>
                                Your session was automatically ended for security
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-save text-success me-2"></i>
                                Any exam answers you submitted have been saved
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-lock text-info me-2"></i>
                                You'll need to log in again to continue
                            </li>
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 mb-4">
                        <a href="@Url.Action("Phase1Login", "Authentication")" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In Again
                        </a>
                        
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Go to Home Page
                        </a>
                    </div>

                    <!-- Exam-specific warning -->
                    @if (ViewBag.WasInExam == true)
                    {
                        <div class="alert alert-danger border-0">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-exclamation-circle me-3 mt-1 text-danger"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">You Were Taking an Exam</h6>
                                    <p class="mb-2">Your exam session was interrupted due to the timeout. Your answers up to the last auto-save have been preserved.</p>
                                    <p class="mb-0"><strong>Contact your exam coordinator immediately</strong> to discuss resuming your exam or alternative arrangements.</p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Prevention tips -->
                    <div class="alert alert-info border-0">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-lightbulb me-3 mt-1 text-info"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Prevent Future Timeouts</h6>
                                <ul class="mb-0 ps-3">
                                    <li>Stay active in the system during exams</li>
                                    <li>Don't leave the exam page idle for extended periods</li>
                                    <li>Save your work frequently (auto-save is enabled)</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Session details -->
                    @if (ViewBag.SessionDuration != null)
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-2">Session Information:</h6>
                            <div class="bg-light p-3 rounded">
                                <div class="row">
                                    <div class="col-4 text-muted">Session Duration:</div>
                                    <div class="col-8">@ViewBag.SessionDuration</div>
                                </div>
                                <div class="row">
                                    <div class="col-4 text-muted">Timeout Reason:</div>
                                    <div class="col-8">@(ViewBag.TimeoutReason ?? "Inactivity")</div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Timestamp -->
                    <div class="text-center mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Session ended at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .alert {
        border-radius: 8px;
    }
    
    .btn {
        border-radius: 6px;
        font-weight: 500;
    }
    
    .border-top {
        border-top: 1px solid #dee2e6 !important;
    }
</style>
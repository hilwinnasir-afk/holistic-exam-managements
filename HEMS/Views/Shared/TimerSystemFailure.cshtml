@{
    ViewBag.Title = "Timer System Failure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white text-center py-3">
                    <i class="fas fa-stopwatch fa-2x mb-2"></i>
                    <h4 class="mb-0">Timer System Failure</h4>
                </div>
                
                <div class="card-body p-4">
                    <!-- Critical Error Message -->
                    <div class="alert alert-danger border-0 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-exclamation-circle me-3 mt-1 text-danger"></i>
                            <div>
                                <h5 class="alert-heading mb-2">Exam timer system has malfunctioned</h5>
                                <p class="mb-0">The exam timing system has encountered a critical error and cannot continue reliably.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Immediate Instructions -->
                    <div class="alert alert-warning border-0 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-exclamation-triangle me-3 mt-1 text-warning"></i>
                            <div>
                                <h6 class="alert-heading mb-2">IMMEDIATE INSTRUCTIONS</h6>
                                <ol class="mb-0 ps-3">
                                    <li><strong>STOP</strong> working on your exam immediately</li>
                                    <li><strong>RAISE YOUR HAND</strong> to get coordinator attention</li>
                                    <li><strong>DO NOT</strong> submit your exam yet</li>
                                    <li><strong>KEEP</strong> this browser window open</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <!-- Timer Status Information -->
                    @if (ViewBag.LastKnownTime != null || ViewBag.ElapsedTime != null)
                    {
                        <div class="mb-4">
                            <h6 class="text-muted mb-3">Timer Status (for coordinator reference):</h6>
                            <div class="bg-light p-3 rounded">
                                @if (ViewBag.ElapsedTime != null)
                                {
                                    <div class="row mb-2">
                                        <div class="col-4 text-muted">Time Elapsed:</div>
                                        <div class="col-8">@ViewBag.ElapsedTime</div>
                                    </div>
                                }
                                @if (ViewBag.LastKnownTime != null)
                                {
                                    <div class="row mb-2">
                                        <div class="col-4 text-muted">Last Known Remaining:</div>
                                        <div class="col-8">@ViewBag.LastKnownTime</div>
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-4 text-muted">Failure Time:</div>
                                    <div class="col-8">@DateTime.Now.ToString("HH:mm:ss")</div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Data Safety -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Your Progress is Safe:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                All your answers have been automatically saved
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Your exam start time is recorded
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Time tracking data has been preserved
                            </li>
                        </ul>
                    </div>

                    <!-- Coordinator Instructions -->
                    <div class="alert alert-info border-0">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-user-tie me-3 mt-1 text-info"></i>
                            <div>
                                <h6 class="alert-heading mb-2">For Exam Coordinators</h6>
                                <p class="mb-2">This student's timer has failed. Please:</p>
                                <ul class="mb-0 ps-3">
                                    <li>Note the current time and elapsed duration</li>
                                    <li>Determine appropriate time adjustment</li>
                                    <li>Provide manual time tracking if needed</li>
                                    <li>Consider alternative timing arrangements</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Error Details -->
                    @if (ViewBag.ErrorId != null)
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-2">Technical Reference:</h6>
                            <div class="bg-light p-3 rounded">
                                <div class="row">
                                    <div class="col-4 text-muted">Error ID:</div>
                                    <div class="col-8"><code>@ViewBag.ErrorId</code></div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Timestamp -->
                    <div class="text-center mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Timer failure detected at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .alert {
        border-radius: 8px;
    }
    
    .btn {
        border-radius: 6px;
        font-weight: 500;
    }
    
    .border-top {
        border-top: 1px solid #dee2e6 !important;
    }
    
    code {
        font-size: 0.9em;
        color: #e83e8c;
    }
</style>
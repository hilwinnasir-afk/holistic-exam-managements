    margin-bottom: 8px;
}

.answered-stat .stat-icon {
    color: #4CAF50;
}

.unanswered-stat .stat-icon {
    color: #9e9e9e;
}

.flagged-stat .stat-icon {
    color: #ff9800;
}

.stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #2c3e50;
}

.stat-label {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
}

.final-warning {
    text-align: center;
}

.warning-box {
    background: linear-gradient(135deg, #fff3cd, #ffeaa7);
    border: 1px solid #ffc107;
    border-radius: 8px;
    padding: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    color: #856404;
    font-weight: 500;
}

.submit-footer {
    padding: 20px 30px;
    background: #f8f9fa;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    gap: 15px;
}

.btn-cancel {
    padding: 12px 25px;
    background: white;
    border: 2px solid #6c757d;
    color: #6c757d;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.btn-cancel:hover {
    background: #6c757d;
    color: white;
}

.btn-submit {
    padding: 12px 25px;
    background: linear-gradient(135deg, #4CAF50, #45a049);
    border: none;
    color: white;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.btn-submit:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
}

/* Responsive Design */
@@media (max-width: 1200px) {
    .exam-main {
        padding: 20px;
        gap: 20px;
    }
    
    .question-palette-sidebar {
        width: 250px;
    }
    
    .palette-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

@@media (max-width: 992px) {
    .exam-main {
        flex-direction: column;
    }
    
    .question-palette-sidebar {
        width: 100%;
        position: static;
        margin-bottom: 20px;
    }
    
    .palette-grid {
        grid-template-columns: repeat(8, 1fr);
        gap: 8px;
    }
    
    .palette-question {
        width: 40px;
        height: 40px;
    }
    
    .header-content {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }
}

@@media (max-width: 768px) {
    .exam-main {
        padding: 15px;
    }
    
    .question-content-area {
        padding: 25px 20px;
    }
    
    .question-text {
        font-size: 1.1rem;
    }
    
    .choice-label {
        padding: 15px 20px;
    }
    
    .choice-text {
        font-size: 1rem;
    }
    
    .navigation-controls {
        flex-direction: column;
        gap: 15px;
    }
    
    .nav-buttons-left,
    .nav-buttons-right {
        width: 100%;
        justify-content: center;
    }
    
    .summary-stats {
        flex-direction: column;
        gap: 15px;
    }
    
    .submit-footer {
        flex-direction: column;
    }
    
    .btn-cancel,
    .btn-submit {
        width: 100%;
        justify-content: center;
    }
}

